<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:text="User"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityUsername"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:text="From"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityFromSpinner"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityUsername" />

    <Spinner
        android:id="@+id/addBookingActivityFromSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityDestinationSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="52dp"
        android:text="Destination"
        app:layout_constraintBottom_toBottomOf="@+id/addBookingActivityDestinationSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addBookingActivityFromSpinner" />

    <Spinner
        android:id="@+id/addBookingActivityDestinationSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityFromSpinner" />

    <TextView
        android:id="@+id/addBookingActivityTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="2dp"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityDateButton"
        app:layout_constraintEnd_toStartOf="@+id/addBookingActivityTimeView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityDestinationSpinner" />

    <Button
        android:id="@+id/addBookingActivityDateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="124dp"
        android:onClick="moveBookingCalendar"
        android:text="Select  Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addBookingActivityTimeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityTextView" />

    <Button
        android:id="@+id/addBookingActivityAddBookingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="51dp"
        android:onClick="addBooking"
        android:text="Add Bookıng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addBookingActivityTimeButton"
        app:layout_constraintStart_toStartOf="@+id/addBookingActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityTimeButton" />

    <EditText
        android:id="@+id/addBookingActivityUsername"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="194dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityTimeView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addBookingActivityTimeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="5dp"
        android:text="Time"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityTimeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addBookingActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityUsername" />

    <Button
        android:id="@+id/addBookingActivityTimeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="23dp"
        android:text="Select Tıme"
        app:layout_constraintBottom_toTopOf="@+id/addBookingActivityAddBookingSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addBookingActivityDateButton"
        app:layout_constraintTop_toBottomOf="@+id/addBookingActivityTimeView" />
</android.support.constraint.ConstraintLayout>