<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ListView
        android:id="@+id/listViewCustomerBuyTrip"
        android:layout_width="0dp"
        android:layout_height="369dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/activityListTripsForCustomerBuyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activityListTripsForCustomerBuyButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="47dp"
        android:onClick="deleteWrittenTrip"
        android:text="Delete Trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activityListTripForCustomerObjectIdTextUpdateTrip"
        app:layout_constraintTop_toBottomOf="@+id/listViewCustomerBuyTrip" />

    <EditText
        android:id="@+id/activityListTripForCustomerObjectIdTextUpdateTrip"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:hint="Write Object Id"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activityListTripsForCustomerBuyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewCustomerBuyTrip" />
</android.support.constraint.ConstraintLayout>